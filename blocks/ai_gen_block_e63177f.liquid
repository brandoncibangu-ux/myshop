{% doc %}
  @prompt
    create video slider for small video in ration 9:16 and no mobile slider so i want to put 3 video directly on the same section , horisontally, mute the videos
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 0;
  }

  .ai-video-slider-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    overflow: hidden;
  }

  .ai-video-slider-wrapper-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.video_gap }}px;
    transition: transform 0.5s ease;
  }

  .ai-video-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.video_gap | times: 2 }}px) / 3);
    position: relative;
    aspect-ratio: 9 / 16;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: #000000;
  }

  .ai-video-slide-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-slide-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-slide-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 2;
  }

  .ai-video-control-btn-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-video-control-btn-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-video-control-btn-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-video-slider-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    margin-top: 24px;
  }

  .ai-video-nav-btn-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .ai-video-nav-btn-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-video-nav-btn-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-video-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-video-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.3;
    cursor: pointer;
    border: none;
    padding: 0;
    transition: opacity 0.3s ease;
  }

  .ai-video-dot-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-video-slider-wrapper-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_video_gap }}px;
    }

    .ai-video-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.mobile_video_gap | times: 2 }}px) / 3);
    }

    .ai-video-slider-nav-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<video-slider-{{ ai_gen_id }}
  class="ai-video-slider-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-slider-container-{{ ai_gen_id }}">
    <div class="ai-video-slider-wrapper-{{ ai_gen_id }}">
      {% for i in (1..9) %}
        {% liquid
          assign video_key = 'video_' | append: i
          assign video = block.settings[video_key]
        %}

        <div class="ai-video-slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
          {% if video %}
            <video
              playsinline
              muted
              {% if block.settings.autoplay %}autoplay{% endif %}
              {% if block.settings.loop %}loop{% endif %}
              preload="metadata"
            >
              {% for source in video.sources %}
                <source src="{{ source.url }}" type="{{ source.mime_type }}">
              {% endfor %}
            </video>

            {% if block.settings.show_controls %}
              <div class="ai-video-controls-{{ ai_gen_id }}">
                <button class="ai-video-control-btn-{{ ai_gen_id }} ai-play-pause-{{ ai_gen_id }}" aria-label="Play/Pause">
                  <svg class="ai-play-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                  <svg class="ai-pause-icon-{{ ai_gen_id }}" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
                  </svg>
                </button>
                <button class="ai-video-control-btn-{{ ai_gen_id }} ai-mute-unmute-{{ ai_gen_id }}" aria-label="Mute/Unmute">
                  <svg class="ai-unmute-icon-{{ ai_gen_id }}" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02z"/>
                  </svg>
                  <svg class="ai-mute-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
                  </svg>
                </button>
              </div>
            {% endif %}
          {% else %}
            <div class="ai-video-slide-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-video-empty-state-{{ ai_gen_id }}">
                Add video {{ i }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="ai-video-slider-nav-{{ ai_gen_id }}">
    <button class="ai-video-nav-btn-{{ ai_gen_id }} ai-prev-btn-{{ ai_gen_id }}" aria-label="Previous">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>

    <div class="ai-video-dots-{{ ai_gen_id }}"></div>

    <button class="ai-video-nav-btn-{{ ai_gen_id }} ai-next-btn-{{ ai_gen_id }}" aria-label="Next">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>
</video-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoSlider{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.videosPerView = 3;
        this.isMobile = window.innerWidth < 750;
      }

      connectedCallback() {
        this.wrapper = this.querySelector('.ai-video-slider-wrapper-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-video-slide-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-prev-btn-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-next-btn-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-video-dots-{{ ai_gen_id }}');

        this.totalSlides = this.slides.length;
        this.maxIndex = Math.max(0, this.totalSlides - this.videosPerView);

        this.createDots();
        this.setupEventListeners();
        this.updateNavigation();
        this.setupVideoControls();
      }

      createDots() {
        if (!this.dotsContainer) return;

        for (let i = 0; i <= this.maxIndex; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-video-dot-{{ ai_gen_id }}';
          if (i === 0) dot.classList.add('active');
          dot.setAttribute('aria-label', 'Go to slide ' + (i + 1));
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.prev());
        }
        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.next());
        }
      }

      setupVideoControls() {
        this.slides.forEach((slide) => {
          const video = slide.querySelector('video');
          if (!video) return;

          const playPauseBtn = slide.querySelector('.ai-play-pause-{{ ai_gen_id }}');
          const muteBtn = slide.querySelector('.ai-mute-unmute-{{ ai_gen_id }}');
          const playIcon = slide.querySelector('.ai-play-icon-{{ ai_gen_id }}');
          const pauseIcon = slide.querySelector('.ai-pause-icon-{{ ai_gen_id }}');
          const muteIcon = slide.querySelector('.ai-mute-icon-{{ ai_gen_id }}');
          const unmuteIcon = slide.querySelector('.ai-unmute-icon-{{ ai_gen_id }}');

          if (playPauseBtn) {
            playPauseBtn.addEventListener('click', () => {
              if (video.paused) {
                video.play();
                playIcon.style.display = 'none';
                pauseIcon.style.display = 'block';
              } else {
                video.pause();
                playIcon.style.display = 'block';
                pauseIcon.style.display = 'none';
              }
            });

            if (!video.paused) {
              playIcon.style.display = 'none';
              pauseIcon.style.display = 'block';
            }
          }

          if (muteBtn) {
            muteBtn.addEventListener('click', () => {
              video.muted = !video.muted;
              if (video.muted) {
                muteIcon.style.display = 'block';
                unmuteIcon.style.display = 'none';
              } else {
                muteIcon.style.display = 'none';
                unmuteIcon.style.display = 'block';
              }
            });

            if (video.muted) {
              muteIcon.style.display = 'block';
              unmuteIcon.style.display = 'none';
            }
          }
        });
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateSlider();
        }
      }

      next() {
        if (this.currentIndex < this.maxIndex) {
          this.currentIndex++;
          this.updateSlider();
        }
      }

      goToSlide(index) {
        this.currentIndex = index;
        this.updateSlider();
      }

      updateSlider() {
        if (!this.wrapper || this.isMobile) return;

        const slideWidth = this.slides[0].offsetWidth;
        const gap = {{ block.settings.video_gap }};
        const offset = -(this.currentIndex * (slideWidth + gap));

        this.wrapper.style.transform = 'translateX(' + offset + 'px)';
        this.updateNavigation();
      }

      updateNavigation() {
        if (this.prevBtn) {
          this.prevBtn.disabled = this.currentIndex === 0;
        }
        if (this.nextBtn) {
          this.nextBtn.disabled = this.currentIndex >= this.maxIndex;
        }

        const dots = this.dotsContainer.querySelectorAll('.ai-video-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    customElements.define('video-slider-{{ ai_gen_id }}', VideoSlider{{ai_gen_id}});
  })();
</script>

