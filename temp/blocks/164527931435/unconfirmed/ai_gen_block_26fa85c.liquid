{% doc %}
  @prompt
    create video slider for small video in ration 9:16 and no mobile slider so i want to put 3 video directly on the same section , horisontally, mute the videos
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-video-slider__container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
  }

  .ai-video-slider__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .ai-video-slider__item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 9 / 16;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: #000000;
  }

  .ai-video-slider__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-slider__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-video-slider__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-video-slider__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-video-slider__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
{% endstyle %}

<video-slider-{{ ai_gen_id }}
  class="ai-video-slider-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-slider__container-{{ ai_gen_id }}">
    <div class="ai-video-slider__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign video_key = 'video_' | append: i
          assign video = block.settings[video_key]
        %}
        <div class="ai-video-slider__item-{{ ai_gen_id }}">
          {% if video %}
            <video
              class="ai-video-slider__video-{{ ai_gen_id }}"
              src="{{ video.sources[1].url }}"
              playsinline
              autoplay
              loop
              muted
              preload="metadata"
            ></video>
          {% else %}
            <div class="ai-video-slider__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-video-slider__empty-state-{{ ai_gen_id }}">
                Add video {{ i }}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</video-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.videos = this.querySelectorAll('.ai-video-slider__video-{{ ai_gen_id }}');
        this.setupVideos();
        this.setupIntersectionObserver();
      }

      setupVideos() {
        this.videos.forEach((video) => {
          video.muted = true;
          video.playsInline = true;
        });
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            const video = entry.target;
            if (entry.isIntersecting) {
              video.play().catch(() => {});
            } else {
              video.pause();
            }
          });
        }, options);

        this.videos.forEach((video) => {
          observer.observe(video);
        });
      }
    }

    customElements.define('video-slider-{{ ai_gen_id }}', VideoSlider{{ ai_gen_id }});
  })();
</script>

