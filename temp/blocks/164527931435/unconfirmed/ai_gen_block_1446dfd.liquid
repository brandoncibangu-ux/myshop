{% doc %}
  @prompt
    generate title
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-title-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-title-block-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
      margin: 0 auto;
    }
  }

  .ai-title-block__container-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-title-block__heading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size_mobile }}px;
    line-height: {{ block.settings.line_height }};
  }

  @media screen and (min-width: 750px) {
    .ai-title-block__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }
  }

  .ai-title-block__subheading-{{ ai_gen_id }} {
    margin: {{ block.settings.subheading_spacing }}px 0 0;
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size_mobile }}px;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .ai-title-block__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_desktop }}px;
    }
  }
{% endstyle %}

<div class="ai-title-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-title-block__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-title-block__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-title-block__subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Title",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Your heading text"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Heading style"
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "label": "Heading size (mobile)",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "label": "Heading size (desktop)",
      "min": 24,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.2
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1a1a1a"
    },
    {
      "type": "header",
      "content": "Subheading style"
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "label": "Subheading size (mobile)",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "subheading_size_desktop",
      "label": "Subheading size (desktop)",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#1a1a1a"
    },
    {
      "type": "range",
      "id": "subheading_spacing",
      "label": "Subheading spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 12
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Title"
    }
  ]
}
{% endschema %}